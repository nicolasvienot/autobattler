{
  "name": "@nico/autobattler-desktop",
  "version": "0.0.1",
  "descriptirelon": "Autobattler Desktop App",
  "author": "Nicolas Vienot",
  "main": "dist/main.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nicolasvienot/autobattler.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "electron:dev": "wait-on dist/main.js && electron .",
    "electron:pack": "electron-builder",
    "preelectron:pack": "npm run build"
  },
  "dependencies": {
    "electron-serve": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.4.5",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.nico.autobattler",
    "productName": "Autobattler",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "web-dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.games"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": null
  }
}
